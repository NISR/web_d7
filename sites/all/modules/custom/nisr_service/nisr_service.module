/*
 * Service gateway
 */
function nisr_service_gateway($service){
	// Authenticate
	if(!user_is_logged_in()){
		drupal_goto('service/login/' . $service);
	}else{
	// Render console
		views_embed_view('service_' . $service);
	}
}