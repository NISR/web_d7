<?php

/**
 * @file
 * Install, update and uninstall functions for the survey module.
 */

/**
 * Implements hook_uninstall().
 */
function survey_uninstall() {
  // Bypass entity_load() as we cannot use it here.
  $types = db_select('survey_type', 'pt')
    ->fields('pt')
    ->execute()
    ->fetchAllAssoc('type');

  foreach ($types as $type => $info) {
    field_attach_delete_bundle('survey', $type);
  }
}

