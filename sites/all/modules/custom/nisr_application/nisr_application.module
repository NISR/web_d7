 */
 
function nisr_application_nisr_application_insert(Application $nisr_application){
	if(!is_dir('public://applications/' . $nisr_application->uuid)){;
		drupal_mkdir('public://applications/' . $nisr_application->uuid);
	}
}


/*******************************************************************************
 ********************************* nisr_application API's **********************************
 ******************************************************************************/

/**
 * Access callback for nisr_application.
 */
function nisr_application_access($op, $nisr_application = NULL, $account = NULL, $entity_type = NULL) {
  global $user;

  if (!isset($account)) {
    $account = $user;
  }
  switch ($op) {
  	 case 'administrer':
      return user_access('administer nisr_application entities', $account);
    case 'create':
      return user_access('administer nisr_application entities', $account)
          || user_access('create nisr_application entities', $account);
    case 'view':
      return user_access('administer nisr_application entities', $account)
          || user_access('view any nisr_application entities',$account)
          || user_access('view own nisr_application entities', $account);
    case 'edit':
      return user_access('administer nisr_application entities',$account)
          || user_access('edit any nisr_application entities',$account)
          || (user_access('edit own nisr_application entities') && ($nisr_application->uid == $account->uid));
  }
}

/**
 * Load a nisr_application.
 */
function nisr_application_load($aid, $reset = FALSE) {
  $nisr_applications = nisr_application_load_multiple(array($aid), array(), $reset);
  return reset($nisr_applications);
}

/**
 * Load multiple nisr_applications based on certain conditions.
 */
function nisr_application_load_multiple($aids = array(), $conditions = array(), $reset = FALSE) {
  return entity_load('nisr_application', $aids, $conditions, $reset);
}

/**
 * Save nisr_application.
 */
function nisr_application_save($nisr_application) {
  entity_save('nisr_application', $nisr_application);
}

/**
 * Delete single nisr_application.
 */
function nisr_application_delete($nisr_application) {
  entity_delete('nisr_application', entity_id('nisr_application' ,$nisr_application));
}

/**
 * Delete multiple nisr_applications.
 */
function nisr_application_delete_multiple($nisr_application_ids) {
  entity_delete_multiple('nisr_application', $nisr_application_ids);
}

