/**
 * Access callback for nisr_application Type.
 */
function nisr_application_type_access($op, $entity = NULL) {
  return user_access('administer nisr_application types');
}

/**
 * Load nisr_application Type.
 */
function nisr_application_type_load($nisr_application_type) {
  return nisr_application_types($nisr_application_type);
}

/**
 * List of nisr_application Types.
 */
function nisr_application_types($type_name = NULL) {
  $types = entity_load_multiple_by_name('nisr_application_type', isset($type_name) ? array($type_name) : FALSE);
  return isset($type_name) ? reset($types) : $types;
}

/**
 * Save nisr_application type entity.
 */
function nisr_application_type_save($nisr_application_type) {
  entity_save('nisr_application_type', $nisr_application_type);
}

/**
 * Delete single case type.
 */
function nisr_application_type_delete($nisr_application_type) {
  entity_delete('nisr_application_type', entity_id('nisr_application_type' ,$nisr_application_type));
}

/**
 * Delete multiple case types.
 */
function nisr_application_type_delete_multiple($nisr_application_type_ids) {
  entity_delete_multiple('nisr_application_type', $nisr_application_type_ids);
}

