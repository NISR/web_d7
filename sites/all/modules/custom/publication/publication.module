/*
 * Implements hook_entity_update()
 */
function publication_entity_update($entity,$type){
	if($type == 'publication'){
		$subjects  = array();
		$subscribers = views_get_view('subscribers');
		switch($entity->type) {
			case 'statistical_report':
			case 'statistical_article':		
				// Get subjects
				$subscribers->set_display('statistical_publications');
				$wr = entity_metadata_wrapper('publication',$entity);
				foreach($wr->field_pub_subject as $subject){
					$subjects[] = $subject->tid->value();
				}
								
				break;
			case 'document':
				
				break;
			case '':
				break;
			default:
				break;
		}
		
		$subscribers->set_arguments($subjects);						
		$subscribers->pre_execute();
		$subscribers->execute();
		
		foreach($subscribers->result as $subscriber){
			$recipients[] = $subscriber->profile_uid;
		}
		
		if(count($recipients)) watchdog('nisr','%d email alerts sent',array('%d' => count($recipients)));
	}
	elseif($type== 'node' && $entity->type == 'article') {
		
	}
}

