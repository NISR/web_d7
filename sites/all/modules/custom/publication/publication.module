/*
 * Implements hook_block_info()
 */
function publication_block_info(){
	$weight = 100;
	// Featured publications on homepage
	$blocks['featured_statistical_reports'] = array(
		'info' => t('Featured statistical reports'),
		'weight' => $weight,
		'cache' => DRUPAL_CACHE_GLOBAL,
		);
	$blocks['featured_statistical_articles'] = array(
		'info' => t('Featured statistical articles'),
		'weight' => $weight,
		'cache' => DRUPAL_CACHE_GLOBAL,
		);
	// Subjects on statistical page
	$blocks['subjects'] = array(
		'info' => t('Subjects/Areas'),
		'weight' => $weight,
		'cache' => DRUPAL_CACHE_GLOBAL,
		);
		
	// Declare blocks from document subjects vocabulary
	$voc = taxonomy_vocabulary_machine_name_load('document_subjects');	
	$subjects = taxonomy_get_tree($voc->vid);
	
	foreach($subjects as $subject){
		$blocks[str_replace(' ','_',strtolower($subject->name))] =  array(
			'info' => t($subject->name) . ' documents',
			//'weight' => ++$weight, 
			'cache' => DRUPAL_CACHE_GLOBAL	
			);
	} 
	
	return $blocks;
}

/*
 * Implements hook_block_view()
 */
function publication_block_view($delta = ''){
	module_load_include('inc','nisr','utils');
	if($delta == 'featured_statistical_reports'){
		$block['title'] = t('Featured reports');
		$view = get_embed_view('featured_publications','statistical_reports',array('831+832+836+833'));
		$block['content'] = $view['result'];
	}	
	
	if($delta == 'featured_statistical_articles'){
		$block['title'] = t('Latest news');
		$view = get_embed_view('featured_publications','statistical_articles',array());
		$block['content'] = $view['result'];
	}
	
	if($delta == 'subjects'){
		$block['title'] = '';
		$block['content'] = get_taxonomy_terms('subjects');
	}
	
	// Feed the dynamically declared blocks from document subjects vocabulary with view embed display
	$voc = taxonomy_vocabulary_machine_name_load('document_subjects');	
	$subjects = taxonomy_get_tree($voc->vid);
	
	foreach($subjects as $subject){
		if($delta == str_replace(' ','_',strtolower($subject->name))){
			$view =  get_embed_view('publications_search','documents',array($subject->tid));			
			$block['title'] = '';
			$block['content'] = $view['result'];
		}
	} 	
		
	return $block;
}

